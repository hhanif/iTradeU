<!doctype html>
<html>
<head>
    <title>Post Item</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>

<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Post item</h1>

    <!-- LOGIN FORM -->
    <form action="/createItem" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="description">
        </div>
        <div class="form-group">
            <label>KeyWord1</label>
            <input type="text" class="form-control" name="keyword1">
        </div>
        <div class="form-group">
            <label>KeyWord2</label>
            <input type="text" class="form-control" name="keyword2">
        </div>
        <div class="form-group">
            <label>KeyWord3</label>
            <input type="text" class="form-control" name="keyword3">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Post</button>
    </form>

    <hr>

</div>
</div>
</body>
</html>
